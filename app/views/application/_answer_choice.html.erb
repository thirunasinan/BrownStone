<%- if (not current_user.low_access?) and answer_choice.correct %>
  <%- class_name = "list-group-item correct" %>
<%- else %>
  <%- class_name = "list-group-item" %>
<%- end %>

<li class="<%= class_name %>" %>
  <%- if answer_choice.image.present? %>
    <%- if answer_choice.text.present? %>
      <p class="preserve-newlines markdown-text"><%= answer_choice.text %></p>
      <p><%= image_tag answer_choice.image.url(:medium) %></p>
    <%- end %>
    <%- else %>
    <span class='preserve-newlines markdown-text'><%= answer_choice.text %></span>
  <%- end %>
</li>
